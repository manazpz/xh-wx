.recovery-box {
  width: 100%;
  padding-top: 0.5rem;
}
.recovery-box ul {
  display: block;
  width: 93.33%;
  min-height: 80vh;
  margin: 0 auto;
}
.recovery-box li {
  display: block;
  width: 100%;
  margin-top: 3rem;
  margin-bottom: -2.5rem;
}
.recovery-box li dt,
.recovery-box li dd {
  position: relative;
  width: 100%;
  height: 2.2rem;
  background: #fff;
  line-height: 2.2rem;
}
.recovery-box li dt span,
.recovery-box li dd span {
  margin-left: 10%;
}
.recovery-box li dt {
  margin-bottom: 2px;
  color: #222;
  font-size: 0.8rem;
}
.recovery-box li dt i {
  position: absolute;
  top: 0;
  left: 0;
  width: 10%;
  height: 2.2rem;
  background: url("/static/image/coupons_button_tick_press2.png") 50% no-repeat;
  -webkit-background-size: 60% 46%;
  -moz-background-size: 60% 46%;
  -ms-background-size: 60% 46%;
  -o-background-size: 60% 46%;
  background-size: 60% 46%;
}
.recovery-box li dt .dt-hook {
  background: url("/static/image/coupons_button_tick_press.png") 50% no-repeat;
  -webkit-background-size: 60% 46%;
  -moz-background-size: 60% 46%;
  -ms-background-size: 60% 46%;
  -o-background-size: 60% 46%;
  background-size: 60% 46%;
}
.recovery-box li dd {
  color: #999;
  font-size: 0.7rem;
}
.recovery-box li dd i {
  position: absolute;
  top: 0;
  left: 0;
  width: 10%;
  height: 2.2rem;
  background: url("/static/image/oldmobileaddress_button_tick_default@2x.png") 50% no-repeat;
  -webkit-background-size: 54% 42%;
  -moz-background-size: 54% 42%;
  -ms-background-size: 54% 42%;
  -o-background-size: 54% 42%;
  background-size: 54% 42%;
}
.recovery-box li dd .dd-hook {
  background: url("/static/image/oldmobileaddress_button_tick_press@2x.png") 50% no-repeat;
  -webkit-background-size: 54% 42%;
  -moz-background-size: 54% 42%;
  -ms-background-size: 54% 42%;
  -o-background-size: 54% 42%;
  background-size: 54% 42%;
}
.recovery-box li dd:active,
.recovery-box li dt:active {
  opacity: 0.8;
}
.recovery-box .confirm-box {
  overflow: hidden;
  display: block;
  width: 80%;
  height: 2rem;
  border-radius: 1rem;
  margin: 0 auto;
}
.recovery-box .confirm-box a {
  display: block;
  width: 100%;
  height: 2rem;
  background: #28c081;
  color: #fff;
  font-size: 0.9rem;
  line-height: 2rem;
  text-align: center;
}
