.refund-main {
  width: 94%;
  height: auto;
  margin: 0 auto;
  padding-top: 2.2rem;
}
.refund-main h3 {
  display: block;
  width: 100%;
  height: 2.2rem;
  line-height: 2.2rem;
  color: #333;
  font-size: 0.8rem;
}
.refund-main select,
.refund-main textarea {
  display: block;
  width: 100%;
  height: 2rem;
  border: 1px solid #d5d5d5;
  border-radius: 0.4rem;
  margin: 0;
  padding: 0;
  font-size: 0.8rem;
  text-indent: 5%;
  resize: none;
}
.refund-main textarea {
  height: 4rem;
  padding: 0.5rem 0;
  resize: none;
}
.submission-btn {
  overflow: hidden;
  position: fixed;
  bottom: 0.5rem;
  left: 2%;
  width: 96%;
  height: 2.2rem;
  border-radius: 0.4rem;
}
.submission-btn a {
  display: block;
  width: 100%;
  height: 2.2rem;
  background: red;
  color: #fff;
  font-size: 0.8rem;
  line-height: 2.2rem;
  text-align: center;
}
