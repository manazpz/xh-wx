.payment-method {
  width: 100%;
  height: 93vh;
  padding-top: 4vh;
  background: #f6f6f6;
}
.payment-method .add-form {
  width: 93.6%;
  margin: 0 auto;
  padding-top: 0.6rem;
}
.payment-method .add-form h3 {
  display: block;
  width: 100%;
  height: 1.9rem;
  color: #222;
  font-size: 0.9rem;
  //line-height: 1.9rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.payment-method .add-form ul {
  overflow: hidden;
  display: block;
  width: 100%;
  border-radius: 0.3rem;
}
.payment-method .add-form li {
  position: relative;
  width: 100%;
  height: 2.35rem;
  margin: 0 auto;
  border-bottom: 1px solid #f6f6f6;
  background: #fff;
  font-size: 1.1rem;
  line-height: 2.35rem;
}
.payment-method .add-form li span {
  float: left;
  width: 100%;
  margin-left: 3%;
  font-size: 0.9rem;
  color: #222;
}
.payment-method .add-form li label {
  float: right;
  width: 72%;
  height: 2.35rem;
  margin: 0;
  padding: 0;
}
.payment-method .add-form li label ::-webkit-input-placeholder {
  color: #e5e5e5;
}
.payment-method .add-form li .validate-btn {
  position: absolute;
  top: 0.4rem;
  right: 3%;
  width: 23.14%;
  height: 1.6rem;
  border-radius: 0.2rem;
  background: #e5e5e5;
  font-size: 0.65rem;
  line-height: 1.6rem;
  text-align: center;
}
.payment-method .add-form li .validate-btn a,
.payment-method .add-form li .validate-btn b {
  display: block;
  width: 100%;
  height: 1.6rem;
  color: #fff;
}
.payment-method .add-form li .validate-on {
  background: #33bf83;
}
.payment-method .add-payment-btn {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 2.45rem;
}
.payment-method .add-payment-btn a {
  display: block;
  width: 100%;
  height: 2.45rem;
  background: #28c081;
  color: #fff;
  font-size: 0.9rem;
  line-height: 2.45rem;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
