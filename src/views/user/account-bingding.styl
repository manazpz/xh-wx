.account-binding {
  width: 100%;
  height: 93vh;
  padding-top: 7vh;
  background: #f6f6f6;
}
.account-binding .tips-icon-img {
  width: 84.8%;
  margin: 0 auto;
}
.account-binding .tips-icon-img dt {
  display: block;
  width: 37.74%;
  height: 2rem;
  margin: 0 auto;
  padding: 1.25rem 0;
}
.account-binding .tips-icon-img dt img {
  display: block;
  width: 100%;
  height: 100%;
}
.account-binding .tips-icon-img dd {
  display: block;
  width: 100%;
  height: 1.25rem;
}
.account-binding .tips-icon-img dd p {
  display: block;
  width: 100%;
  height: 1.25rem;
  color: #666;
  font-size: 0.6rem;
  line-height: 1.25rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.account-binding .account-form {
  display: block;
  width: 93.6%;
  height: auto;
  margin: 0 auto;
  border-radius: 0.3rem;
  background: #fff;
}
.account-binding .account-form label {
  position: relative;
  display: block;
  width: 90.88%;
  height: 3.15rem;
  margin: 0 auto;
  padding: 0;
  border-bottom: 1px solid #f6f6f6;
}
.account-binding .account-form label span {
  float: left;
  width: 25%;
  height: 3.15rem;
  color: #222;
  font-size: 0.8rem;
  line-height: 3.15rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.account-binding .account-form label input {
  float: right;
  width: 75%;
  height: 3.15rem;
  margin: 0;
  padding: 0;
  font-size: 0.8rem;
}
.account-binding .account-form label ::-webkit-input-placeholder {
  color: #e5e5e5;
}
.account-binding .account-form label .validate-btn {
  position: absolute;
  top: 0.75rem;
  right: 0;
  width: 23.14%;
  height: 1.6rem;
  border-radius: 0.2rem;
  background: #e5e5e5;
  font-size: 0.65rem;
  line-height: 1.6rem;
  text-align: center;
}
.account-binding .account-form label .validate-btn a,
.account-binding .account-form label .validate-btn b {
  display: block;
  width: 100%;
  height: 1.6rem;
  color: #fff;
}
.account-binding .account-form label .validate-on {
  background: #33bf83;
}
.account-binding .account-form label:nth-child(2) {
  border-bottom: none;
}
.account-binding .clause-and-binding {
  width: 93.87%;
  height: auto;
  margin: 1.75rem auto 0;
}
.account-binding .clause-and-binding .clause {
  position: relative;
  width: 100%;
  height: 1.75rem;
}
.account-binding .clause-and-binding .clause i {
  position: absolute;
  top: 0;
  left: 5%;
  display: block;
  width: 10%;
  height: 1.75rem;
  background: url("/static/image/oldmobileaddress_button_tick_default@2x.png") 50% no-repeat;
  -webkit-background-size: 50% 50%;
  -moz-background-size: 50% 50%;
  -ms-background-size: 50% 50%;
  -o-background-size: 50% 50%;
  background-size: 50% 50%;
}
.account-binding .clause-and-binding .clause .i-on {
  background: url("/static/image/oldmobileaddress_button_tick_press@2x.png") 50% no-repeat;
  -webkit-background-size: 50% 50%;
  -moz-background-size: 50% 50%;
  -ms-background-size: 50% 50%;
  -o-background-size: 50% 50%;
  background-size: 50% 50%;
}
.account-binding .clause-and-binding .clause p {
  width: 70%;
  height: 1.75rem;
  margin: 0 auto;
  color: #666;
  line-height: 1.75rem;
  font-size: 0.6rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.account-binding .clause-and-binding .binding {
  overflow: hidden;
  display: block;
  width: 100%;
  height: 2rem;
  border-radius: 0.4rem;
}
.account-binding .clause-and-binding .binding a {
  display: block;
  width: 100%;
  height: 2rem;
  background: #94dabc;
  color: #fff;
  font-size: 0.9rem;
  line-height: 2rem;
  text-align: center;
}
.account-binding .clause-and-binding .binding .bind-on {
  background: #33bf83;
}
