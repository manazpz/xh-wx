.authentication {
  position: relative;
  height: 100vh;
  width: 100%;
  height: 93vh;
  padding-top: 3.5vh;
  background: #f6f6f6;
}
.authentication .authentication-box {
  width: 87.2%;
  height: auto;
  margin: 0 auto;
  padding-top: 1.5rem;
}
.authentication .authentication-box div {
  width: 100%;
  height: 6.67rem;
  padding-top: 2.08rem;
  margin-bottom: 0.5rem;
  border-radius: 0.5rem;
  background: #fff;
}
.authentication .authentication-box div img {
  display: block;
  width: 29.66%;
  height: 4.92rem;
  margin: 0 auto;
}
.authentication .upload-btn {
  overflow: hidden;
  position: absolute;
  bottom: 1rem;
  left: 10%;
  width: 80%;
  height: 2.25rem;
  border-radius: 3rem;
}
.authentication .upload-btn a {
  display: block;
  width: 100%;
  height: 2.25rem;
  background: #94dabc;
  color: #fff;
  font-size: 0.9rem;
  line-height: 2.25rem;
  text-align: center;
}
