.label-box {
  width: 90%;
  height: auto;
  padding-top: 3rem;
  margin : 0 auto;
}
.label-box h3 {
  display: block;
  width: 100%;
  height: 2rem;
  line-height 2rem;
  font-size: 0.9rem;
}
.label-box textarea {
  display: block;
  width: 90%;
  height: 5rem;
  padding : 1rem 5%;
}
.label-box .label-btn {
  display: block;
  width: 100%;
  height: 2.5rem;
  margin 2rem auto 0;
}
.label-box .label-btn a {
  display :block;
  width: 100%;
  height:2.5rem;
  border-radius : 0.2rem;
  background :#ef4f4f;
  color : #fff;
  line-height: 2.5rem;
  font-size: 1.1rem;
  text-align: center;
}

