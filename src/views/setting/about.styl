.about-main {
  width: 82%;
  margin: 0 auto;
  padding: 8vh 0 0;
}
.about-main dl {
  width: 100%;
  height: auto;
  padding-bottom: 2vh;
}
.about-main dl dt {
  display: block;
  width: 25.37%;
  height: 3.9rem;
  margin: 0 auto;
}
.about-main dl dt img {
  display: block;
  width: 100%;
  height: 100%;
}
.about-main dl dd {
  display: block;
  width: 50%;
  height: 1rem;
  margin: 0.5rem auto;
  color: #222;
  font-size: 0.85rem;
  text-align: center;
}
.about-main p {
  color: #666;
  line-height: 1rem;
  font-size: 0.7rem;
}
