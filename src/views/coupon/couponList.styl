.preference-box {
  width: 100%;
  height: 93vh;
  padding-top: 7vh;
  background: #f6f6f6;
  margin: 0 auto 0;
}
.preference-box .title-h2-des {
  position: fixed;
  position: relative;
  display: block;
  width: 100%;
  height: 1.7rem;
  border-radius: 0.2rem;
  background: #fff;
  color: #222;
  line-height: 1.7rem;
  font-size: 0.65rem;
}
.preference-box .title-h2-des span {
  margin-left: 3%;
}
.preference-box .title-h2-des b {
  position: absolute;
  top: 0;
  right: 0;
  width: 10%;
  height: 1.7rem;
  background: url("/static/image/coupons_button_tick_press3.png") 50% no-repeat;
  -webkit-background-size: 50% 50%;
  -moz-background-size: 50% 50%;
  -ms-background-size: 50% 50%;
  -o-background-size: 50% 50%;
  background-size: 50% 50%;
}
.preference-box .title-h2-des .b-hook {
  background: url("/static/image/coupons_button_tick_press.png") 50% no-repeat;
  -webkit-background-size: 50% 50%;
  -moz-background-size: 50% 50%;
  -ms-background-size: 50% 50%;
  -o-background-size: 50% 50%;
  background-size: 50% 50%;
}
.preference-box ul {
  width: 94%;
  height: auto;
  padding-top: 0.5rem;
  margin : 0 auto;
}
.preference-box li {
  width: 100%;
  height: 5.8rem;
  margin-bottom: 0.8rem;
}
.preference-box li dl {
  width: 100%;
  height: 5.8rem;
}
.preference-box li dt {
  float: left;
  width: 28.49%;
  height: 5.8rem;
}
.preference-box li dt strong {
  display: block;
  width: 100%;
  height: 3.5rem;
  color: #fff;
  line-height: 4.5rem;
  font-size: 1.5rem;
  text-align: center;
}
.preference-box li dt strong i {
  font-style: normal;
  font-size: 0.9rem;
}
.preference-box li dt span {
  display: block;
  width: 100%;
  color: #fefefe;
  font-size: 0.7rem;
  text-align: center;
}
.preference-box li dd {
  float: right;
  width: 65%;
  height: 5.8rem;
}
.preference-box li dd h4 {
  position: relative;
  display: block;
  width: 100%;
  height: 3.25rem;
  color: #222;
  line-height: 3rem;
  font-size: 0.8rem;
}
.preference-box li dd h4 b {
  position: absolute;
  top: 0;
  right: 0;
  width: 16%;
  height: 1.7rem;
  background: url("/static/image/coupons_button_tick_press3.png") 50% no-repeat;
  -webkit-background-size: 50% 50%;
  -moz-background-size: 50% 50%;
  -ms-background-size: 50% 50%;
  -o-background-size: 50% 50%;
  background-size: 50% 50%;
}
.preference-box li dd h4 .b-hook {
  background: url("/static/image/coupons_button_tick_press.png") 50% no-repeat;
  -webkit-background-size: 50% 50%;
  -moz-background-size: 50% 50%;
  -ms-background-size: 50% 50%;
  -o-background-size: 50% 50%;
  background-size: 50% 50%;
}
.preference-box li dd strong {
  display: block;
  height: 1rem;
  color: #666;
  font-size: 0.75rem;
}
.preference-box li dd span {
  display: block;
  color: #666;
  font-size: 0.6rem;
}
.preference-box .coiling-01 {
  background: url('/static/image/coiling_color_bg_01.png') no-repeat;
  -webkit-background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  -ms-background-size: 100% 100%;
  -o-background-size: 100% 100%;
  background-size: 100% 100%;
}
.preference-box .coiling-02 {
  background: url('/static/image/coiling_color_bg_02.png') no-repeat;
  -webkit-background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  -ms-background-size: 100% 100%;
  -o-background-size: 100% 100%;
  background-size: 100% 100%;
}
.preference-box .coiling-03 {
  background: url('/static/image/coiling_color_bg_03.png') no-repeat;
  -webkit-background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  -ms-background-size: 100% 100%;
  -o-background-size: 100% 100%;
  background-size: 100% 100%;
}
.preference-box .check-pref {
  width: 100%;
  height: 3rem;
}
.preference-box .check-pref a {
  display: block;
  color: #28c081;
  font-size: 0.8rem;
  text-align: center;
}
.preference-box .receive-pref {
  width: 100%;
}
.preference-box .receive-pref a {
  display: block;
  width: 90%;
  height: 2.2rem;
  margin: 0 auto;
  border-radius: 1rem;
  background: #28c081;
  color: #fff;
  line-height: 2.2rem;
  font-size: 0.9rem;
  text-align: center;
}
.preference-box .nothing {
  display: block;
  width: 100%;
  height: auto;
  margin-top: 1rem;
}
.preference-box .nothing p {
  width: 100%;
  color: #d2d2d2;
  font-size: 0.55rem;
  text-align: center;
}
