  width: 100%;
  height: 2.25rem;
  background: #28c081;
}
.confirm-btn {
  height:2.8rem;
}
.mint-button .mint-button-text {
  color: #fff;
}
.mint-tab-item-label {
  font-size:16px;
  padding-left: 0;
  padding-right: 0;
}
