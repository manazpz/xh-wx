.merchandise-des {
  width: 100%;
  height: 3.33rem;
  padding-top: 0.3rem;
  margin-bottom: 0.5rem;
  background: #fff;
}
.merchandise-des h3 {
  width: 92%;
  height: 1.5rem;
  margin: 0 auto;
  color: #222;
  line-height: 1.5rem;
  font-size: 0.9rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.merchandise-des p {
  width: 92%;
  height: 1.5rem;
  margin: 0 auto;
  color: #fe4045;
  line-height: 1.4rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.merchandise-des p i {
  font-size: 0.6rem;
  font-style: normal;
}
.merchandise-des p span {
  font-size: 1.05rem;
}
.navbar {
  top 0
  left 0
  right 0
  bottom 0
  margin auto
  background-color #0000
  margin-top: 40px;
  width: 50%
}

.sp .mint-radiolist-title {
  font-size 1rem
}
.sp .mint-radiolist {
  height auto
}
.sp .mint-radiolist a{
  float: left;
  border: none;
  padding: 0;
  backgroundColor: none;
  border: none;
  marginRight: 0.5rem;
}
.sp .mint-cell-wrapper {
  border: 1px solid #28c081;
}
.sp .mint-cell-wrapper .mint-radio-label {
  //color: #fff;
}
.sp .mint-cell {
  margin 0.5rem
  min-height: 35px
}
.sp .mint-radio-label {
  margin: 5px;
}
.sp .mint-radio-input:checked + .mint-cell-wrapper {
  background-color: #26a2ff;
  border-color: #26a2ff;
}
.sp .mint-radiolist-label {
  padding: 0
}
.sp .mint-radio-core {
  display: none
}
.confirm-btn {
