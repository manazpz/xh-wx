.parameter-list {
  width: 100%;
  height: auto;
}
//.parameter-list .clearfix {
//  padding-bottom: 5rem;
//}
.parameter-list li {
  float: left;
  width: 100%;
  padding: 0.75rem 0;
  border-bottom: 1px solid #f6f6f6;
  //line-height: 1.2rem;
  background: #fff;
}
.parameter-list li span {
  float: left;
  width: 16.8%;
  color: #999;
  font-size: 0.85rem;
  text-indent: 5%;
}
.parameter-list li div {
  overflow: auto;
  float: right;
  width: 80%;
}
.parameter-list li div dl {
  float: left;
  width: 20%;
  font-size: 0.7rem;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.parameter-list li div dl dt {
  padding: 0.2rem 0 0.5rem;
  color: #222;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.parameter-list li div dl dd {
  color: #999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.parameter-list li div p {
  float: left;
  width: 90%;
  color: #222;
  font-size: 0.9rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.parameter-list li div p b {
  float: left;
  margin-right: 2%;
  padding: 0.15rem 1%;
  border-radius: 0.2rem;
  background: red;
  color: #fff;
  font-size: 0.5rem;
}
.parameter-list li div i {
  float: right;
  width: 10%;
  height: 1.2rem;
  background: url("/static/image/icon_right_arrow_s.png") 50% no-repeat;
  -webkit-background-size: 30% 80%;
  -moz-background-size: 30% 80%;
  -ms-background-size: 30% 80%;
  -o-background-size: 30% 80%;
  background-size: 30% 80%;
}
.mint-button--default {
  box-shadow: none;
}
.mint-popup-bottom {
  height:auto!important;
}
.mint-cell-wrapper {
  background : none!important;
}
.mint-radiolist .select {
  border-radius : 3px;
}
.mint-radiolist .select label {
  color :#fff;
}
.v-modal {
  background : none;
}
.pl-list {
  width: 100%;
  height: auto;
  padding-bottom: 5rem;
}
.pl-list .clearfix {
  width:100%;
  //padding-bottom: 0.5rem;
}
.pl-list .pl-li {
  float: left;
  width: 100%;
  padding: 0.5rem 0;
  border-bottom: 1px solid #f6f6f6;
  background: #fff;
}
.pl-list .pl-li span {
  float: left;
  width: 16.8%;
  color: #999;
  font-size: 0.7rem;
  text-indent: 5%;
}
.pl-list .pl-li div {
  overflow: auto;
  float: right;
  width: 50%;
}
.pl-list .pl-li div p {
  float: left;
  width: 90%;
  color: #222;
  font-size: 0.7rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.pl-list .pl-li div p em {
  float: right;
}
.pl-list .pl-li .span-pl {
  width: 50%;
}
.pl-list .pl-li .name-pl {
  width: 50%;
}
.pl-list .pl-li li {
  padding: 0.5rem 0;
  height: 1rem;
  line-height: 1.2rem;
}


.pl-list .pl-btn {
  display: block;
  width: 100%;
  background: #fff;
}
.pl-list .pl-btn a {
  display: block;
  width: 90%;
  height: 1.6rem;
  margin: 0 auto;
  padding: 0.25rem 0;
  line-height: 1.6rem;
  text-align: center;
  font-size: 0.7rem;
}
