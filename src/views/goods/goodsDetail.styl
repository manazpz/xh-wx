.goodsDetail {
  background: #f6f6f6;
}
.merchandise-des {
  width: 100%;
  padding-top: 0.7rem;
  padding-bottom 0.2rem;
  margin-bottom: 0.8rem;
  background: #fff;
}
.merchandise-des h3 {
  width: 92%;
  height: 1.6rem;
  margin: 0 auto;
  color: #222;
  line-height: 1.6rem;
  font-size: 1.2rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.merchandise-des .p-1 {
  width: 92%;
  height: 1.6rem;
  margin: 0 auto;
  color: #fe4045;
  line-height: 1.6rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.merchandise-des .p-1 i {
  font-size: 0.6rem;
  font-style: normal;
}
.merchandise-des .p-1 span {
  font-size: 1.4rem;
}
.merchandise-des .p-2 {
  position: relative;
  width: 92%;
  height: 1.2rem;
  margin: 0 auto;
  color: #fe4045;
  line-height: 1.2rem;
}
.merchandise-des .p-2 span {
  color: #222;
  font-weight: normal;
  font-size: 0.6rem;
}
.merchandise-des .p-2 i {
  position: absolute;
  top: 0;
  right: -3%;
  width: 5%;
  height: 1.2rem;
  background: url("/static/image/icon_right_arrow_s.png") 50% no-repeat;
  -webkit-background-size: 50% 80%;
  -moz-background-size: 50% 80%;
  -ms-background-size: 50% 80%;
  -o-background-size: 50% 80%;
  background-size: 50% 80%;
}

.footer-shopping-cart {
  position: fixed;
  bottom: 0;
  width: 100%;
  min-width: 320px;
  max-width: 750px;
  height: 2.8rem;
}
.footer-shopping-cart .left-icon {
  float: left;
  width: 14.94%;
  height: 2.8rem;
  background: #ffffff url("/static/image/icon_collection.png") 50% no-repeat;
  -webkit-background-size: 65% 70%;
  -moz-background-size: 65% 70%;
  -ms-background-size: 65% 70%;
  -o-background-size: 65% 70%;
  background-size: 65% 70%;
}
.footer-shopping-cart .center-shopping {
  float: left;
  width: 29.33%;
  height: 2.8rem;
  background: #2bb179;
  color: #fff;
  font-size: 1rem;
  line-height: 2.25rem;
  border-radius: 0px;
  text-align: center;
}
.footer-shopping-cart .right-shopping {
  float: right;
  width: 55.73%;
  height: 2.8rem;
  background: #28c081;
  color: #fff;
  font-size: 1rem;
  line-height: 2.25rem;
  border-radius: 0px;
  text-align: center;
}
