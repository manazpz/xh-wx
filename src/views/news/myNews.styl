.my-news-tab {
  overflow : auto;
  position: fixed;
  top: 2.6rem;
  width: 100%;
  min-width: 320px;
  max-width: 750px;
  height: 2.6rem;
  background: #fff;
  z-index: 9980;
}
.my-news-tab ul {
  list-style: none;
  display: flex;
}
.my-news-tab ul li {
  margin: 0 3.5%;
  font-size: 1rem;
}
.my-news-tab ul li a {
  display: block;
  width: 3.5rem;
  color: #666;
  line-height: 2.6rem;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.my-news-tab ul .select {
  position: relative;
}
.my-news-tab ul .select a {
  color: #28c081;
}
.my-news-tab ul .select::after {
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 5rem;
  width: 100%;
  height: 0.15rem;
  background: #28c081;
  content: "";
}
.my-news-main {
  display: block;
  width: 100%;
  height: 10rem;
  margin-top: 2.6rem;
  min-height: 94.25vh;
  background: #f6f6f6 url('/static/image/shopping_trolley_02.png') 50% 32% no-repeat;
  -webkit-background-size: 40% 36%;
  -moz-background-size: 40% 36%;
  -ms-background-size: 40% 36%;
  -o-background-size: 40% 36%;
  background-size: 40% 36%;
}
.my-news-main .news-inf-box {
  display: none;
}
.my-news-main .news-inf-box ul {
  width: 93.33%;
  margin: 0 auto;
  padding: 0.5rem 0 0;
  background: #f6f6f6;
}
.my-news-main .news-inf-box li {
  width: 100%;
  height: 7.5rem;
  border-radius: 0.3rem;
  margin-bottom: 0.5rem;
  background: #fff;
}
.my-news-main .news-inf-box li:nth-child(1) {
  margin-top: 2.4rem;
}
.my-news-main .news-inf-box li h1 {
  position: relative;
  overflow: hidden;
  display: block;
  width: 90%;
  height: 1.2rem;
  margin: 0 auto;
  padding-top: 0.6rem;
}
.my-news-main .news-inf-box li h1 strong {
  position: relative;
  float: left;
  max-width: 60%;
  color: #222;
  font-size: 1rem;
}
.my-news-main .news-inf-box li h1 span {
  float: right;
  margin-top: 0.2rem;
  color: #999;
  font-size: 0.75rem;
}
.my-news-main .news-inf-box li dl {
  display: block;
  width: 92%;
  height: 3.58rem;
  margin: 0.5rem auto 0;
}
.my-news-main .news-inf-box li dl dt {
  overflow: hidden;
  float: left;
  width: 23%;
  height: 4.58rem;
  border-radius: 0.2rem;
}
.my-news-main .news-inf-box li dl dt img {
  display: block;
  width: 100%;
  height: 100%;
}
.my-news-main .news-inf-box li dl dd {
  float: right;
  width: 73%;
  height: 3.58rem;
}
.my-news-main .news-inf-box li dl dd h2 {
  display: block;
  margin: 0.5rem 0 0.2rem;
  color: #222;
  font-size: 1rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.my-news-main .news-inf-box li dl dd span {
  display: block;
  margin: 0 0 0.8rem;
  color: #999;
  font-size: 0.75rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.my-news-main .news-inf-box li dl dd p {
  display: block;
  color: #999;
  font-size: 0.65rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.my-news-main .news-inf-box .li-style-02 dl dd h2 {
  height: 2rem;
  margin-bottom: 0.3rem;
  white-space: inherit;
}
.my-news-main .news-inf-box .li-style-01 {
  height: 11.95rem;
}
.my-news-main .news-inf-box .li-style-01 dl dt {
  display: block;
  width: 100%;
  height: 6.5rem;
}
.my-news-main .news-inf-box .li-style-01 dl dt img {
  display: block;
  width: 100%;
  height: 100%;
}
.my-news-main .news-inf-box .li-style-01 dl dd {
  display: block;
  width: 100%;
}
.my-news-main .news-inf-box .li-style-01 dl dd h2 {
  height: 2rem;
  white-space: inherit;
}
.my-news-main .news-inf-box .li-style-01 dl dd p a {
  color: #999;
}
.my-news-main .news-inf-box .fresh-li h1 strong::after {
  position: absolute;
  top: 0;
  right: -7%;
  width: 0.3rem;
  height: 0.3rem;
  border-radius: 1rem;
  background: red;
  content: "";
}
.my-news-main .show {
  display: block;
}
.logistics-inf {
  display: block;
  width: 100%;
  height: 100vh;
  background: #f6f6f6;
}
