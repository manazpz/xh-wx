.eca-inf-box {
  width: 100%;
  height: 4.38rem;
  margin-top: 2.75rem;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  background: #fff;
}
.eca-inf-box dl {
  padding-top: 0.38rem;
}
.eca-inf-box dt {
  float: left;
  width: 18.67%;
  height: 3.5rem;
  margin-left: 2.27%;
}
.eca-inf-box dt img {
  display: block;
  width: 100%;
  height: 100%;
}
.eca-inf-box dd {
  position: relative;
  float: right;
  width: 74%;
  height: 1.8rem;
  margin-right: 2.27%;
  line-height: 0.9rem;
  color: #333;
  font-size: 0.6rem;
}
.eca-inf-box dd p {
  overflow: hidden;
  display: block;
  width: 100%;
  height: 1.8rem;
}
.eca-inf-box dd a {
  position: absolute;
  top: 2.5rem;
  right: 0;
  width: 20%;
  height: 0.8rem;
  border: 1px solid red;
  border-radius: 0.15rem;
  color: red;
  font-size: 0.6rem;
  line-height: 0.8rem;
  text-align: center;
}
.eca-main-box {
  width: 100%;
  height: 11.5rem;
