.home-change-purchase {
  position: relative;
  width: 93%;
  height: auto;
  margin: -0.6rem auto 0;
  padding-bottom 1.68rem;
  border-radius: 0.3rem;
  background: #fff;
  box-shadow: 0 5px 30px 3px #ccc;
}
.home-change-purchase ul {
  width: 90%;
  margin: 0 auto;
}
.home-change-purchase ul li {
  width: 100%;
  height: 2.83rem;
  border-bottom: 0.05rem solid #f6f6f6;
  line-height: 2.83rem;
}
.home-change-purchase ul li span {
  float: left;
  width: 14.24%;
  height: 2.83rem;
  color: #666;
  line-height: 2.83rem;
  font-size: 1rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.home-change-purchase ul li strong {
  float: left;
  width: 70%;
  height: 2.83rem;
  color: #202020;
  line-height: 2.83rem;
  font-size: 1rem;
  font-weight: bold;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.home-change-purchase p {
  width: 100%;
  color: #e53a3a;
  font-size: 0.6rem;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.home-change-purchase .exchange-btn {
  width: 90%;
  margin: 0 auto;
  background: #28c081;
  color: #fff;
  text-align: center;
}
.h-prompt-img {
  position: absolute;
  bottom: 8vh;
  left: 15%;
  width: 69.2%;
  height: 3.25rem;
  margin: 4.5rem auto 0;
}
.h-prompt-img h4 {
  margin-bottom: 0.8rem;
  color: #999;
  font-size: 1rem;
  text-align: center;
}
.h-prompt-img div {
  margin-top 1rem
}
.h-prompt-img div a {
  float: left;
  width: 20%;
  margin: 0 2.5%;
}
.h-prompt-img div a img {
  display: block;
  width: 40%;
  height: 1.5rem;
  margin: 0 auto 0.2rem;
}
.h-prompt-img div a span {
  display: block;
  width: 100%;
  color: #999;
  font-size: 0.8rem;
  text-align: center;
}
