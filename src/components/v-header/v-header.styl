@import "~common/stylus/index.styl"

.header
  position fixed
  top 0
  left 0
  font-size 0
  width 100%
  height 40px
  z-index 5
  text-align center
  .model
    &.morning
      color rgb(51, 51, 51)
      background-color rgb(2, 143, 214)
    &.night
      color rgb(184, 184, 184)
      background-color rgb(85, 85, 85)
    & > h2
      line-height 40px
      font-size 22px
      color white
    .navigation
      position absolute
      top 10px
      width 20px
      height 20px
      font-size 0
      left 10px
      padding 5px
      bg-image('navigation')
      background-size 20px 20px
      background-repeat no-repeat
