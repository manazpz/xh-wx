@import "~common/stylus/index.styl"
@import "~common/stylus/iconfont.css"

.sidebar
  position fixed
  top 0
  left 0
  z-index 50
  height 100%
  width 300px
  background-color #fff
  transform translate3d(0, 0, 0)
  &.fold-enter-active, &.fold-leave-active
    transition all 0.5s
  &.fold-enter, &.fold-leave-active
    transform translate3d(-100%, 0, 0)
  .menu-list
    display flex
    padding 10px 20px 10px 10px
    .menu
      flex 1
      text-align center
      .avatar
        margin-bottom 5px
        .iconfont
          color rgb(148, 153, 157)
          font-size 20px
      .name
        color rgb(148, 153, 157)
  .themes-list
    position absolute
    top 180px
    bottom 56px
    width 100%
    height 100%
    overflow hidden
    .themes
      display table
      width 100%
      padding 5px
      color rgb(148, 153, 157)
      &.current
        background-color rgb(27, 35, 41)
        color rgb(255, 255, 255)
      .icons
        height 1.5rem
        display inline-block
        margin-right 5px
      .themetitle
        display inline-block
        color black
        margin-left 15px
        font-size 1.2rem
        line-height 50px

  .bottom-menu
    position absolute
    display flex
    bottom 0
    left 0
    width 100%
    height 56px
    .menu
      flex 1
      text-align center
      padding-top 5px
      .avatar
        margin-bottom 5px
        .iconfont
          color rgb(148, 153, 157)
          font-size 20px
        img
          margin-bottom 2px
      .name
        color rgb(148, 153, 157)

.mask
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 40
  background: rgba(7, 17, 27, 0.6)
  opacity 1
  &.fade-enter-active, &.fade-leave-active
    transition all 0.5s
  &.fade-enter, &.fade-leave-active
    opacity 0

.top-pic {
  display: block;
  width: 100%;
  height: 10rem;
  background: url("/static/image/pic_bg.png") no-repeat;
  -webkit-background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  -ms-background-size: 100% 100%;
  -o-background-size: 100% 100%;
  background-size: 100% 100%;
}
.top-pic dl {
  width: 100%;
  padding-top: 1.7rem;
}
.top-pic dt {
  display: block;
  width: 30%;
  height: 30%;
  margin: 0 auto;
}
.top-pic dt img {
  display: block;
  width: 100%;
  height: 100%;
}
.top-pic p {
  width: 50%;
  height: 2.2rem;
  margin: 0 auto;
  margin-top: 0.5rem;
  color: #fff;
  line-height: 2.2rem;
  font-size: 1.3rem;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
